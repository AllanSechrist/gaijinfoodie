  <%= simple_form_for @blog do |f| %>
    <%= f.input :title %>
    <%= f.input :content, as: :text, label: "Content" %>
    <%= f.association :restaurant, collection: Restaurant.all, prompt: 'Select a Restaurant' %>
    <%= f.input :food_rating, collection: Blog::FOOD_RATINGS %>
    <%= f.input :service_rating, collection: Blog::SERVICE_RATINGS %>
    <%= f.input :price_rating, collection: Blog::PRICE_RATINGS %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
