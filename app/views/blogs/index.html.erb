<div class="container">
  <h1 class="my-3 text-center">Blogs</h1>
  <div class="row">
    <div class="col-sm 8 offset-sm-2">
    <% @blogs.each do |blog| %>
        <div class="blog mb-3">
          <h2>
            <%= blog.title %>
          </h2>
          <p>
            <%= blog.content %>
          </p>
          <p>
            <%= blog.published_date %>
          </p>
        </div>
    <% end %>
    </div>
  </div>
</div>
