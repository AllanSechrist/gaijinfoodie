  <%= simple_form_for @restaurant, remote: true do |f| %>
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :cuisine %>
    <%= f.input :website %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :food_rating, collection: Restaurant::FOOD_RATINGS %>
    <%= f.input :service_rating, collection: Restaurant::SERVICE_RATINGS %>
    <%= f.input :price_rating, collection: Restaurant::PRICE_RATINGS %>
    <%= f.input :open_time %>
    <%= f.input :close_time %>
    <%= f.input :days_open %>
    <%= f.button :submit, class: 'btn btn-primary my-3' %>
  <% end %>
